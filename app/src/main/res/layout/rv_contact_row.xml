<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/contactRowCV"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="2dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profileSmallIV"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:src="@drawable/default_profile_icon" />

        <LinearLayout
            android:id="@+id/detailsLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profileSmallIV"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="2dp"
                android:ellipsize="end"
                android:autoSizeTextType="uniform"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Ahmed Zubair" />

            <TextView
                android:id="@+id/birthDayTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:autoSizeTextType="uniform"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:layout_marginBottom="2dp"
                tools:text="01-01-01"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/callBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/cardview_light_background"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/call_icon" />

        <ImageButton
            android:id="@+id/textBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/cardview_light_background"
            android:layout_below="@+id/callBtn"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/text_icon" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>